[Unit]
Description=CaioH NVIDIA Control service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/root/
ExecStart=/usr/bin/python3 -m caioh_nvml_gpu_control control-all -n "GPU_NAME" -pl 290 -tl 65 -sp "0:50,36:55,40:75,45:100"
Restart=always
KillSignal=SIGQUIT

[Install]
WantedBy=multi-user.target
